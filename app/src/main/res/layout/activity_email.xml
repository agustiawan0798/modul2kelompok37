<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baju"
    tools:context=".EmailActivity">

    <EditText
        android:id="@+id/editTextSbj"
        android:layout_width="357dp"
        android:layout_height="44dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/borderbutton"
        android:ems="10"
        android:hint="  Subject"
        android:textColor="@android:color/white"
        android:inputType="textEmailSubject"
        android:textColorHint="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/editTextMsg"
        app:layout_constraintEnd_toEndOf="@+id/editTextTo"
        app:layout_constraintStart_toStartOf="@+id/editTextTo"
        app:layout_constraintTop_toBottomOf="@+id/editTextTo"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/editTextTo"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/borderbutton"
        android:fontFamily="@string/app_name"
        android:hint="  To "
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textColorHint="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/editTextSbj"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/editTextMsg"
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/borderbutton"
        android:ems="10"
        android:hint="  Message "
        android:textColor="@android:color/white"
        android:inputType="textMultiLine"
        android:textColorHint="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/buttonSend"
        app:layout_constraintEnd_toEndOf="@+id/editTextSbj"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextSbj"
        app:layout_constraintTop_toBottomOf="@+id/editTextSbj"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="8dp"
        android:text="Send "
        android:textColor="@android:color/white"
        android:background="@drawable/roundedbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextMsg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editTextMsg"
        app:layout_constraintTop_toBottomOf="@+id/editTextMsg"
        app:layout_constraintVertical_bias="0.251"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
